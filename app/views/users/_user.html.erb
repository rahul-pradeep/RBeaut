<div class="flex flex-wrap items-center mb-5 text-indigo-700">
  <div class="flex-1 flex justify-between items-center">
    <div><h3 class="text-lg"><%= user.name %></h3>(<%= user.username %>)</div>
    <p>Joined on <%= readable_time(user.created_at) %></p>

  </div>
</div>

<% if user.meetings.any? %>
  <div class="block pl-2 border-l border-indigo-300 mb-5">
    <p class="text-lg uppercase tracking-loose text-grey-700 pt-1">Upcoming Reservations</p>
    <% user.meetings.each do |meeting| %>
        <%= link_to meeting.name, meeting, class: "link my-2 inline-block" %><br/>
    <% end %>
  </div>
<% end %>